<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/home_layout"
    android:background="#dad6e6">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="189dp"
            android:layout_height="153dp"
            android:text="@string/bgl"
            android:id="@+id/bgl_button"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/blood_glucose_image"/>

        <Button
            android:layout_width="189dp"
            android:layout_height="153dp"
            android:text="@string/diet"
            android:id="@+id/diet_button"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/diet_image"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="189dp"
            android:layout_height="153dp"
            android:text="@string/exercise"
            android:id="@+id/exercise_button"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/exercise_image"/>

        <Button
            android:layout_width="189dp"
            android:layout_height="153dp"
            android:text="@string/medication"
            android:id="@+id/medication_button"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/medication_image"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="189dp"
            android:layout_height="153dp"
            android:text="@string/regimen"
            android:id="@+id/reg_button"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/regimen_image"/>
    </LinearLayout>

</LinearLayout>