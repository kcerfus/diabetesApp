<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:rowCount="5"
    android:columnCount="4"
    android:id="@+id/home_layout">

    <Button
        android:layout_width="189dp"
        android:layout_height="153dp"
        android:text="@string/bgl"
        android:id="@+id/bgl_button"
        android:layout_row="0"
        android:layout_column="1"
        android:drawableTop="@drawable/blood_glucose_image"/>

    <Button
        android:layout_width="189dp"
        android:layout_height="153dp"
        android:text="@string/diet"
        android:id="@+id/diet_button"
        android:layout_row="0"
        android:layout_column="3"
        android:drawableTop="@drawable/diet_image"/>

    <Button
        android:layout_width="189dp"
        android:layout_height="153dp"
        android:text="@string/exercise"
        android:id="@+id/exercise_button"
        android:layout_row="2"
        android:layout_column="1"
        android:drawableTop="@drawable/exercise_image"/>

    <Button
        android:layout_width="189dp"
        android:layout_height="153dp"
        android:text="@string/medication"
        android:id="@+id/medication_button"
        android:layout_row="2"
        android:layout_column="3"
        android:drawableTop="@drawable/medication_image"/>

    <Button
        android:layout_width="189dp"
        android:layout_height="153dp"
        android:text="@string/regimen"
        android:id="@+id/reg_button"
        android:layout_row="3"
        android:layout_column="1"
        android:drawableTop="@drawable/regimen_image"/>

    <Button
        android:layout_width="189dp"
        android:layout_height="153dp"
        android:text="@string/graphs"
        android:id="@+id/graph_button"
        android:layout_row="3"
        android:layout_column="3"
        android:drawableTop="@drawable/graph_image"/>
</GridLayout>