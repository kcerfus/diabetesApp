<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ImageViewRegimen"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/regimen_image"
        android:scaleType="matrix"
        android:contentDescription="@string/regimen_image" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="20"
        android:id="@+id/EditTextRegimen"
        android:hint="@string/enter_regimen_component"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:id="@+id/EditTextTime"
        android:hint="@string/enter_time"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:inputType="time" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/month"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/spinnerMonth"
                android:layout_gravity="center_horizontal"
                android:spinnerMode="dropdown"
                android:entries="@array/spinner_month"
                android:focusableInTouchMode="false"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/day"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/spinnerDay"
                android:layout_gravity="center_horizontal"
                android:spinnerMode="dropdown"
                android:entries="@array/spinner_day"
                android:focusableInTouchMode="false"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/year"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/spinnerYear"
                android:layout_gravity="center_horizontal"
                android:spinnerMode="dropdown"
                android:entries="@array/spinner_year"
                android:focusableInTouchMode="false"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/hour"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/spinnerHour"
                android:layout_gravity="center_horizontal"
                android:spinnerMode="dropdown"
                android:entries="@array/spinner_hour"
                android:focusableInTouchMode="false"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/minute"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/spinnerMinute"
                android:layout_gravity="center_horizontal"
                android:spinnerMode="dropdown"
                android:entries="@array/spinner_minute"
                android:focusableInTouchMode="false"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/AM_PM"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/spinnerAM_PM"
                android:layout_gravity="center_horizontal"
                android:spinnerMode="dropdown"
                android:entries="@array/spinner_AM_PM"
                android:focusableInTouchMode="false"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>

    <Spinner
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerType"
        android:layout_gravity="center_horizontal"
        android:spinnerMode="dropdown"
        android:entries="@array/spinner_types"
        android:focusableInTouchMode="false"
        android:textAlignment="center" />

    <Button
        style="?android:attr/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:id="@+id/ButtonSubmitRegimen"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

</LinearLayout>